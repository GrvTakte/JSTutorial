<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please read below instruction carefully to get reward after playing JS Quiz."
            android:textAlignment="center"
            android:fontFamily="@font/josefinsans_light"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cup"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, User"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefinsans_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The updated version of JS Tutorial Application has been rolled out with amazing user rewarding platform, JS Tutorial Application user can able to get reward money in the form of recharge or wallet balance."
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹50/week or ₹100/month will be given to user who fulfill following criteria."
            android:textColor="#000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. User standing on first position of the leaderboard will get the reward money once in a week or once in a month."
            android:textColor="#ff0000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. User standing on first position of the leaderboard and crossed the score of 10000 will get ₹50 recharge/ wallet balance once in current week, Reward will be given at the end of the week."
            android:textColor="#ff0000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. User standing on first position of the leaderboard and crossed the score of 100000 will get ₹100 recharge/ wallet balance once in current month, Reward will be given at the end of the month."
            android:textColor="#ff0000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. User with reward benefit will get email from JS Tutorial Team."
            android:textColor="#ff0000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. User with reward benefit have to share their mobile number to get reward money"
            android:textColor="#ff0000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. User can share their information on given mail id: developer.takte@gmail.com"
            android:textColor="#ff0000"
            android:autoLink="email"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Winner will be declare on given facebook page: https://www.facebook.com/JS-Tutorial-1990292664545716 (Please do Share and Like given facebook page, So you will get notify every time when winner announce.)"
            android:textColor="#000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only user will be responsible in the process of information sharing with JS Tutorial Team."
            android:textColor="#000"
            android:fontFamily="@font/josefinsans_light"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</ScrollView>